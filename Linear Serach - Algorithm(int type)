
package coding.ninja;

import java.util.Scanner;

public class Test {
	
	
	
	public static void main(String[] args) {
				
		
		// Linear/ Sequential Search Algorithm
		
		int [] arr = {1,2,3,4,5,6,7,8,9};
		Scanner s = new Scanner(System.in);
		System.out.println("Enter the element, which you want to search in the given set of Array");
		int item = s.nextInt();
		int temp =0;
		
		for(int i =0;i<arr.length;i++) {
			
			if(arr[i]== item) {
				System.out.println("Item is found at the"+"\t"+i+"th Index");
				
				temp = temp+1;
			}
		} if(temp==0) {
			System.out.println("Item is not found in the given set of array");
		}
		
	}// main method close

}// main class close
